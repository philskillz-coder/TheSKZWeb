@{
    ViewData["Title"] = "Create Permission";
}

<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">


<div class="border p-3 mt4">
    <div class="row pb-2">
        <h2 class="text-primary">
            Create Permission
        </h2>
        <br />
    </div>
</div>


<div class="row pt-4">
    <h4 class="text-light">Permission Name</h4>
    <div class="col-md-6">
        <div class="form-outline">
            <input type="text" id="input-name" class="form-control" pattern=".{3,21}" title="Permission Name" spellcheck="false" placeholder="..."/>
        </div>
    </div>
</div>



<div class="row pt-4">
    <div class="col-md-6">
        <div style="width: 50%; float: left;">
            <div class="ms-0 me-1">
                <h4 class="text-light">Critical</h4>
                <div class="checkbox">
                    <input id="input-critical" type="checkbox" data-toggle="toggle">
                </div>
            </div>
        </div>
        <div style="margin-left: 50%;">
            <div class="ms-1 me-0">
                <h4 class="text-light">Default</h4>
                <div class="checkbox">
                    <input id="input-default" type="checkbox" data-toggle="toggle">
                </div>
            </div>
        </div>
    </div>
</div>
<br />


<div class="row pt-4">
    <div class="col-md-6">
        <div class="w-100 btn-group" role="group">
            <button type="button" id="submit-create" class="btn btn-success rounded text-start" style="width: 200px">
                <i class="bi bi-check-square"></i> &nbsp; Create Permission
            </button>
            <a type="button" asp-area="Permissions" asp-controller="Administrator" asp-action="ManagePermissions"
                class="btn btn-primary rounded ms-2 me-0 text-start" style="width: 200px">
                <i class="bi bi-caret-left"></i> &nbsp; Back to overview
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>

    <script>
        $(document).ready(function() {
            var input_permission_name = document.getElementById("input-name");
            var input_permission_critical = document.getElementById("input-critical");
            var input_permission_default = document.getElementById("input-default");
            var submit_create = document.getElementById("submit-create");

            submit_create.onclick = async (btndata) => { 
                await advancedPost(
                    "",
                    {
                        "Name": input_permission_name.value,
                        "Critical": input_permission_critical.checked,
                        "Default": input_permission_default.checked
                    }
                )
            }
        });
    </script>
}